{
    "name": "time-tracker",
    "displayName": "Time Tracker",
    "description": "Extension for tracking time spent on coding and logging time to Jira.",
    "version": "1.0.1-betta",
    "publisher": "kirill.liubushkin",
    "repository": {
        "type": "git",
        "url": "https://github.com/kededg/jira_time_tracker.git"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*",
        "onCommand:timeTracker.configure"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "timeTracker.logTime",
                "title": "Log Time to Jira"
            },
            {
                "command": "timeTracker.configure",
                "title": "Configure Time Tracker"
            },
            {
                "command": "timeTracker.start",
                "title": "Start Time Tracker counter"
            },
            {
                "command": "timeTracker.stop",
                "title": "Stop Time Tracker counter"
            },
            {
                "command": "timeTracker.reset",
                "title": "Reset and stop Time Tracker counter"
            },
            {
                "command": "timeTracker.setTask",
                "title": "Set Jira task ID"
            }
        ],
        "configuration": {
            "title": "Time Tracker",
            "properties": {
                "timeTracker.jiraUrl": {
                    "type": "string",
                    "default": "https://jira.com",
                        "description": "Your Jira URL (e.g., https://jira.com)."
                },
                "timeTracker.inactivityTimeout": {
                    "type": "number",
                    "default": 10,
                        "description": "Inactivity timeout in minutes (default is 10 minutes)."
                },
                "timeTracker.autoLogging": {
                    "type": "boolean",
                    "default": true,
                        "description": "Enable automatic time logging."
                },
                "timeTracker.autoLoggingTime": {
                    "type": "number",
                    "default": 10,
                        "description": "Auto-logging threshold in minutes (default is 10 minutes). If the inactivity timer triggers or the branch changes and you've worked on a task for more than this time, it will prompt you to log that time."
                }
            }
      }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext .ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "^16.0.0",
        "@types/vscode": "^1.75.0",
        "eslint": "^8.0.0",
        "typescript": "^4.8.0",
        "vscode-test": "^1.6.0"
    },
    "dependencies": {
        "crypto-js": "^4.1.1",
        "node-fetch": "^2.6.7"
    }
}
